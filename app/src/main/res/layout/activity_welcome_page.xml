<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F2F2"
    android:orientation="vertical"
    tools:context=".Welpg">

    <!-- OMG!!! I CODED THIS!!!! :)) -->

    <ImageView
        android:id="@+id/img"
        android:layout_width="411dp"
        android:layout_height="889dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.521" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginStart="473dp"
        android:layout_marginTop="473dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="401dp"
        android:layout_height="105dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.698"
        app:srcCompat="@drawable/caption" />

    <ImageView
        android:id="@+id/lets_go"
        android:layout_width="203dp"
        android:layout_height="197dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99"
        app:srcCompat="@drawable/letsgoo" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/feet1"
        android:layout_width="125dp"
        android:layout_height="121dp"
        android:layout_margin="10dp"
        android:rotation="0"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.235"
        app:shapeAppearanceOverlay="@style/customImageStyle"
        app:srcCompat="@drawable/girlgif" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/feet4"
        android:layout_width="121dp"
        android:layout_height="116dp"
        android:layout_margin="10dp"
        android:rotation="90"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.247"
        app:shapeAppearanceOverlay="@style/customImageStyle"
        app:srcCompat="@drawable/mancat3" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/feet2"
        android:layout_width="127dp"
        android:layout_height="121dp"
        android:layout_margin="20dp"
        android:rotation="15"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062"
        app:shapeAppearanceOverlay="@style/customImageStyle"
        app:srcCompat="@drawable/cow" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/feet3"
        android:layout_width="122dp"
        android:layout_height="115dp"
        android:layout_margin="10dp"
        android:rotation="80"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085"
        app:shapeAppearanceOverlay="@style/customImageStyle"
        app:srcCompat="@drawable/bird4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="246dp"
        android:layout_height="256dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.574"
        app:layout_constraintStart_toStartOf="@+id/img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41"
        app:srcCompat="@drawable/petlovee" />

</androidx.constraintlayout.widget.ConstraintLayout>
